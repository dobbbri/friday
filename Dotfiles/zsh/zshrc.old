# create e move to folder
function mkcd()
{
  mkdir -p "$*"
  cd "$*"
}

function mksh()
{
  touch "$*"
  echo "#!/bin/bash" > "$*"
  chmod u+x "$*"
  open -a "Sublime Text" "S*"
}

